#!/bin/bash

SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
LIBRARY_PATH=$SCRIPT_PATH/../lib
source "$LIBRARY_PATH"/brew
source "$LIBRARY_PATH"/link
source "$LIBRARY_PATH"/settings

CMDNAME=$(basename "$0")
USAGE="Usage: $CMDNAME [ import | export | link ]"
help() {
    echo "$USAGE"
    echo ""
    echo "Options:"
    echo "  import:   Import settings"
    echo "  export:   Export settings"
    echo "  link:     Create symbolic links"
}

if [ $# -eq 0 ]; then
    echo "$USAGE" 1>&2
    exit 1
fi

while [ $# -gt 0 ]
do
    case $1 in
        import)
            update_brew
            update_links
            update_defaults
            ;;
        export)
            ;;
        link)
            update_links
            ;;
        -h)
            help
            exit 0
            ;;
        *)
            echo "$USAGE" 1>&2
            exit 1
    esac
    shift
done
